<% include partials/header.ejs %>
<div class="container">
    <div class="new-background">
        <div class="row justify-content-center mb-3">
            <h2>Register to be a member</h1>
        </div>

        <div class="row d-flex justify-content-center">

            <form action="/" method="POST" style="width:40%">
                <div class="form-group">
                    <input class="form-control" type="text" name="firstName" id="" placeholder="First Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lastName" id="" placeholder="Last Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" id="" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <button class="bn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
        <div class="row" style="margin: 0 30%">
            <a href="/">Go Back</a>
        </div>
    </div>
</div>
